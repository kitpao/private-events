<div class="forms">
<h1> Yupi! create an event </h1>
  <%= form_with model: @event, local: true do |f| %>
    <%= f.label :description %><br>
    <%= f.text_area :description %><br>

    <%= f.label :date %><br>
    <%= f.date_field :date %><br>

    <%= f.label :location %><br>
    <%= f.text_field :location %><br>
    <br>
    <br>
    <%= f.submit 'Create event' %>
  <% end  %>
</div>